{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "noUnusedLocals": true,
    "sourceMap": false,
    "outDir": "./lib",
    "declaration": true,
    "jsx": "preserve",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "jest-matrix-react": [
        "./test/test-utils/jest-matrix-react"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./node_modules/matrix-js-sdk/src/@types/*.d.ts",
    "./scripts/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "ts-node": {
    "files": true,
    "moduleTypes": {
      "*": "cjs"
    }
  },
  "exclude": [
    "node_modules"
  ]
}
